<body>
    <div class="container">
        <!-- <textarea class="form-control" name="content" id="content" placeholder="Nội dung"></textarea> -->
        <!-- < %- include("../layout/nav.ejs") %> -->
         <div class="panel panel-default">
             <div class="panel-heading">Thêm bài viết mới</div>
            <div class="panel-body">
                <div class="row">
                
                            <% if (data && data.error){ %>
                            <div id="login-alert" class="alert alert-danger col-sm-12" style="text-align:center">
                                <%= data.error %>
                            </div>
                            <%}%>
                        <form role="form" method="POST" action="/admin/post/new">
                            
                            <div class="form-group">
                                <label for="title">Tiêu đề</label>
                                <input id="title" class="form-control" name="title" placeholder="Tiêu đề bài viết"  maxlength="1000" required/>
                            </div>
                            <div class="form-group">
                                <label for="content">Nội dung</label>
                                <textarea class="form-control" name="content" id="content" placeholder="Nội dung"></textarea>

                            </div>
                            <div class="form-group">
                                <label for="author">Tác giả</label>
                                <input id="author" class="form-control" name="author" type="text" placeholder="Tên tác giả" value="<%-data.user.last_name  %>" maxlength="50" required/>
                                <!-- <input class="form-control" name="created_at" id="created_at" type="hidden"> -->
                            </div>
                            <input type="submit" value="Thêm mới" style="width: 100%;" class="btn btn-success">
                        </form>
                    
                </div>
            </div>
         </div>
    </div>
    
</body>


</html>
